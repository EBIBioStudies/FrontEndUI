<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <app>
        <reports>
            <originator>"ArrayExpress Archive" &lt;arrayexpress@ebi.ac.uk&gt;</originator>
            <recipients>kolais@ebi.ac.uk</recipients>
            <smtp><server>smtp.ebi.ac.uk</server></smtp>
        </reports>
    </app>
    <ae>
        <experiments>
            <db><datasources>${interface.application.pref.experiments.datasources}</datasources></db>
            <file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-experiments.xml</location></file>
            <reload>
                <atstart>false</atstart>
                <schedule>${interface.application.pref.experiments.reload.schedule}</schedule>
                <threads>25</threads>
            </reload>
        </experiments>
        <atlasexperiments>
            <datasources>dwp.smithers, dwp.otto</datasources>
            <file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-atlas-experiments.txt</location></file>
            <reload>
                <atstart>false</atstart>
                <schedule>${interface.application.pref.experiments.reload.schedule}</schedule>
            </reload>
        </atlasexperiments>
        <species><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-species.xml</location></file></species>
        <arrays><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-arrays.xml</location></file></arrays>
        <exptypes><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-experiment-types.xml</location></file></exptypes>
        <users><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-users.txt</location></file></users>
        <files>
            <root><location>${interface.application.pref.files.root.location}</location></root>
            <persistence><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-files.xml</location></file></persistence>
            <rescan><interval>${interface.application.pref.files.rescan.interval}</interval></rescan>
        </files>
        <efo><index><location>${sys:java.io.tmpdir}/index/efo</location></index></efo>
    </ae>
</configuration>
