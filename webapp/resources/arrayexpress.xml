<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <app>
        <reports>
            <originator>"ArrayExpress Archive" &lt;arrayexpress@ebi.ac.uk&gt;</originator>
            <recipients>kolais@ebi.ac.uk</recipients>
            <smtp><server>smtp.ebi.ac.uk</server></smtp>
        </reports>
    </app>
    <ae>
        <db>
            <connections>
                <connection>
                    <name>aepub1</name>
                    <driver>oracle.jdbc.OracleDriver</driver>
                    <url>jdbc:oracle:thin:@otto.ebi.ac.uk:1521:AEPUB1</url>
                    <username>${interface.application.db.username}</username>
                    <password>${interface.application.db.password}</password>
                    <minConnections>30</minConnections>
                    <maxConnections>30</maxConnections>
                    <testStatement>select 1 from tt_security where rownum = 1</testStatement>
                </connection>
                <connection>
                    <name>aepub2</name>
                    <driver>oracle.jdbc.OracleDriver</driver>
                    <url>jdbc:oracle:thin:@moe.ebi.ac.uk:1521:AEPUB2</url>
                    <username>${interface.application.db.username}</username>
                    <password>${interface.application.db.password}</password>
                    <minConnections>30</minConnections>
                    <maxConnections>30</maxConnections>
                    <testStatement>select 1 from tt_security where rownum = 1</testStatement>
                </connection>
                <connection>
                    <name>aepub3</name>
                    <driver>oracle.jdbc.OracleDriver</driver>
                    <url>jdbc:oracle:thin:@smithers.ebi.ac.uk:1521:AEPUB3</url>
                    <username>${interface.application.db.username}</username>
                    <password>${interface.application.db.password}</password>
                    <minConnections>30</minConnections>
                    <maxConnections>30</maxConnections>
                    <testStatement>select 1 from tt_security where rownum = 1</testStatement>
                </connection>
                <connection>
                    <name>aecur</name>
                    <driver>oracle.jdbc.OracleDriver</driver>
                    <url>jdbc:oracle:thin:@moe.ebi.ac.uk:1521:AECUR</url>
                    <username>${interface.application.db.username}</username>
                    <password>${interface.application.db.password}</password>
                    <minConnections>30</minConnections>
                    <maxConnections>30</maxConnections>
                    <testStatement>select 1 from tt_security where rownum = 1</testStatement>
                </connection>
                <connection>
                    <name>dwp.smithers</name>
                    <driver>oracle.jdbc.OracleDriver</driver>
                    <url>jdbc:oracle:thin:@smithers.ebi.ac.uk:1521:AEDWP</url>
                    <username>${interface.application.atlasdb.username}</username>
                    <password>${interface.application.atlasdb.password}</password>
                    <minConnections>5</minConnections>
                    <maxConnections>5</maxConnections>
                    <testStatement>select 1 from ae1__experiment__main where rownum = 1</testStatement>
                </connection>
                <connection>
                    <name>dwp.otto</name>
                    <driver>oracle.jdbc.OracleDriver</driver>
                    <url>jdbc:oracle:thin:@otto.ebi.ac.uk:1521:AEDWP</url>
                    <username>${interface.application.atlasdb.username}</username>
                    <password>${interface.application.atlasdb.password}</password>
                    <minConnections>5</minConnections>
                    <maxConnections>5</maxConnections>
                    <testStatement>select 1 from ae1__experiment__main where rownum = 1</testStatement>
                </connection>
            </connections>
        </db>
        <experiments>
            <db><connections>${interface.application.pref.experiments.connections}</connections></db>
            <file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-experiments.xml</location></file>
            <reload>
                <atstart>false</atstart>
                <schedule>${interface.application.pref.experiments.reload.schedule}</schedule>
                <threads>25</threads>
            </reload>
        </experiments>
        <atlasexperiments>
            <connections>dwp.smithers, dwp.otto</connections>
            <file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-atlas-experiments.txt</location></file>
            <reload>
                <atstart>false</atstart>
                <schedule>${interface.application.pref.experiments.reload.schedule}</schedule>
            </reload>
        </atlasexperiments>
        <species><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-species.xml</location></file></species>
        <arrays><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-arrays.xml</location></file></arrays>
        <exptypes><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-experiment-types.xml</location></file></exptypes>
        <users><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-users.txt</location></file></users>
        <files>
            <root><location>${interface.application.pref.files.root.location}</location></root>
            <persistence><file><location>${sys:java.io.tmpdir}/${interface.application.pref.files.prefix}-files.xml</location></file></persistence>
            <rescan><interval>${interface.application.pref.files.rescan.interval}</interval></rescan>
        </files>
        <efo>
            <source>/WEB-INF/classes/efo.owl</source>
            <synonyms>/WEB-INF/classes/synonyms.txt</synonyms>
            <stopWords>a,able,about,across,after,all,almost,also,am,among,an,and,any,are,as,at,be,because,been,but,by,can,cannot,could,dear,did,do,does,either,else,ever,every,for,from,get,got,had,has,have,he,her,hers,him,his,how,however,i,if,in,into,is,it,its,just,least,let,like,likely,may,me,might,most,must,my,neither,no,nor,not,of,off,often,on,only,or,other,our,own,rather,said,say,says,she,should,since,so,some,than,that,the,their,them,then,there,these,they,this,tis,to,too,twas,us,wants,was,we,were,what,when,where,which,while,who,whom,why,will,with,would,yet,you,your</stopWords>
            <index><location>${sys:java.io.tmpdir}/index/efo</location></index>
        </efo>
    </ae>
</configuration>
