<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>${project.name} v${project.version}.${buildNumber}</display-name>
    <servlet>
        <description>Application Status Servlet</description>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.StatusServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Error Pages Servlet</description>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.ErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Query Servlet</description>
        <servlet-name>QueryServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.QueryServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Flat File Transformation Servlet</description>
        <servlet-name>FlatFileTransformationServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.FlatFileTransformationServlet</servlet-class>
    </servlet>
    <servlet>
        <description>File Download Servlet</description>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Zip Download Servlet</description>
        <servlet-name>ZipDownloadServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.ZipDownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Thumbnail Servlet</description>
        <servlet-name>ThumbnailServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.ThumbnailServlet</servlet-class>
    </servlet>
    <!--servlet>
        <description>Archived File Download Servlet</description>
        <servlet-name>ArchivedFileDownloadServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.ArchivedFileDownloadServlet</servlet-class>
    </servlet-->
    <servlet>
        <description>Control Servlet</description>
        <servlet-name>ControlServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.ControlServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Feedback Reporter Servlet</description>
        <servlet-name>FeedbackServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.FeedbackServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Authentication Servlet</description>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Logout Servlet</description>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <description>HTTP Proxy Servlet</description>
        <servlet-name>HttpProxyServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.HttpProxyServlet</servlet-class>
    </servlet>
    <servlet>
        <description>Data Lookup Servlet</description>
        <servlet-name>LookupServlet</servlet-name>
        <servlet-class>uk.ac.ebi.arrayexpress.servlets.LookupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/servlets/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/servlets/error/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueryServlet</servlet-name>
        <url-pattern>/servlets/query/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlatFileTransformationServlet</servlet-name>
        <url-pattern>/servlets/fftransform/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ZipDownloadServlet</servlet-name>
        <url-pattern>/servlets/download/zip/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/servlets/download/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThumbnailServlet</servlet-name>
        <url-pattern>/servlets/thumbnail/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArchivedFileDownloadServlet</servlet-name>
        <url-pattern>/servlets/archdownload/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlServlet</servlet-name>
        <url-pattern>/servlets/control/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackServlet</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HttpProxyServlet</servlet-name>
        <url-pattern>/servlets/proxy/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LookupServlet</servlet-name>
        <url-pattern>/servlets/lookup/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AccessLoggingSuppressFilter</filter-name>
        <filter-class>uk.ac.ebi.arrayexpress.servlets.AccessLoggingSuppressFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
        <init-param>
            <param-name>confPath</param-name>
            <param-value>/WEB-INF/urlrewrite.xml</param-value>
        </init-param>
        <init-param>
            <param-name>confReloadCheckInterval</param-name>
            <param-value>-1</param-value>
        </init-param>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>slf4j</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AccessLoggingSuppressFilter</filter-name>
        <url-pattern>/servlets/status</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>uk.ac.ebi.arrayexpress.BSInterfaceApplication</listener-class>
    </listener>
    <listener>
        <display-name>ImageIO service provider loader/unloader</display-name>
        <listener-class>com.twelvemonkeys.servlet.image.IIOProviderContextListener</listener-class>
    </listener>
    <!--
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secured</web-resource-name>
            <url-pattern>/auth</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>${interface.application.webxml.security.transport.guarantee}</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    -->
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>

    <error-page>
        <error-code>400</error-code>
        <location>/servlets/error/400</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/servlets/error/403</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/servlets/error/404</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/servlets/error/500</location>
    </error-page>
</web-app>
